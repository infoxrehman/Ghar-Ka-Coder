<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/codr_token_background"
    android:orientation="vertical"
    android:padding="@dimen/_12sdp">

    <ImageView
        android:id="@+id/codrTokenIcon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-28dp"
        android:gravity="center"
        android:src="@drawable/airdrop_coming" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/_18sdp"
        android:layout_marginTop="-22dp"
        android:layout_marginEnd="@dimen/_18sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/lato_semibold"
        android:gravity="center"
        android:text="#Codr token will be avaiable very soon soo you can claim it..."
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />

    <Button
        android:id="@+id/okBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/primary_button"
        android:fontFamily="@font/lato_bold"
        android:text="Yaah! Cool"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        app:backgroundTint="@null" />

</LinearLayout>